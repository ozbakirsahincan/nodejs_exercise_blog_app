<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    
    <%- include('../partials/nav') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <%- include('../partials/category-menu.ejs',categories) %>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%= title %>
                </h1>
                <!-- Card Body  -->
                <% blogs.forEach(blog=> { %>
                    <% if (blog.postOK) { %>
                     
                        <%- include('../partials/blog-card',blog) %>

                        <% } %>

                    <% }) %>
                        <!--Card Body End-->
                        <!-- Pagination -->
                        <% if (blogs.filter(blog => blog.postOK).length > 3) { %>
                         
                            <%- include('../partials/pagination.ejs') %>
                        <% } %>
                        <!-- Pagination End-->
            </div>
        </div>
    </div>
</body>

</html>