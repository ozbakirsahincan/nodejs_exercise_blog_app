<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>

    <%- include('../partials/nav') %>
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-3">
                    <%- include('../partials/category-menu.ejs',{categories,selectedCategory}) %>
                </div>
                <div class="col-md-9">
                    <h1 class="h3 mb-3"><%= title %></h1>
                    <!-- Card Body  -->
                    <% if (blogs.length == 0) { %>
                        <%- include('../partials/no-products') %>
                    <% } %>

                    <% blogs.forEach(blog=> { %>
                        <%- include('../partials/blog-card',blog) %>
                            <% }) %>
                                <!--Card Body End-->
                                <!-- Pagination -->
                                <% if (blogs.filter(blog=> blog.postOK).length > 3) { %>

                                    <%- include('../partials/pagination.ejs') %>
                                        <% } %>
                                            <!-- Pagination End-->
                </div>
            </div>
        </div>
</body>

</html>